@{
    Layout = null;
}
<div class="container body-content py-3">
    <h1 class="py-md-3">@Localizer["Dashboard"]</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4 box-shadow">
                <h4 class="card-header">
                    @Localizer["Latest orders"]
                </h4>
                <div class="card-body">
                    <order-widget status="0" num-records="5"></order-widget>
                </div>
            </div>
        </div>
        @if (User.IsInRole("admin"))
        {
            <div class="col-md-6">
                <div class="card mb-4 box-shadow">
                    <h4 class="card-header">
                        @Localizer["Pending reviews"]
                    </h4>
                    <div class="card-body">
                        <review-widget status="1" num-records="5"></review-widget>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (User.IsInRole("admin"))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4 box-shadow">
                    <h4 class="card-header">
                        @Localizer["Most search keywords"]
                    </h4>
                    <div class="card-body">
                        <most-search-keyword></most-search-keyword>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4 box-shadow">
                    <h4 class="card-header">
                        @Localizer["Most viewed products"]
                    </h4>
                    <div class="card-body">
                        <most-viewed-products></most-viewed-products>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
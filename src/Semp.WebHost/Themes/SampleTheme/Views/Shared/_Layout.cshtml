@using System.Globalization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - SEMP TCL</title>
    @RenderSection("additionalMeta", false)

    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/multi-dropdown-menu/css/bootstrap-4-navbar.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/core/site.css" />
    
    <link rel="stylesheet" href="https://unpkg.com/ionicons@4.2.4/dist/css/ionicons.min.css">

    <link simpl-append-version="true" rel="stylesheet" href="~/themes/SampleTheme/site.css" />
   
    @RenderSection("head", required: false)
</head>
<body>
    <div class="top-bar">
        <div class="container">
            <ul class="nav justify-content-end">
                @await Html.PartialAsync("_SelectLanguagePartial")
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </div>
    </div>
    <div class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-4 logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img alt="Semp" src="~/modules/core/Logo_Semp.png" />
                    </a>
                </div>
                <div class="col-10 col-md-5 col-lg-7 search-box">
                    @* @await Component.InvokeAsync("SearchForm") *@
                </div>
                <div class="col-2 col-md-1 cart-btn">
                    @* @await Component.InvokeAsync("CartBadge") *@
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-expand-lg navbar-light bg-light btco-hover-menu main-nav">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                @* @await Component.InvokeAsync("CategoryMenu") *@
                @*<vc:menu menu-name="Menu Superior Principal" view-name="TopBar"></vc:menu> *@
            </div>
        </div>
    </div>
    <partial name="_CookieConsentPartial" />
    <main class="container body-content clearfix">
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container">
            @* 
            <div class="row">
                <div class="col-md-3">
                    <h4>@Localizer["Customer Service"]</h4>
                    <vc:menu menu-name="Customer services"></vc:menu>
                </div>
                <div class="col-md-3">
                    <h4>@Localizer["Information"]</h4>
                    <vc:menu menu-name="Information"></vc:menu>
                </div>
                <!--
                <div class="col-md-6">
                    <h4>SEMP TCL</h4>
                    <p>The first internal system built on .NET Core.</p>
                    <p>Simple to use and easy to customize</p>
                    <p>Cross platform and Open source</p>
                </div>
                -->
            </div>
            <hr />
            *@
            <div class="row">                
                <div class="col-12 text-right">
                    <span class="pull-right">Powered by <a href="/" class="text-danger"><strong>SEMP TCL</strong></a> &copy; @DateTime.Now.Year</span>
                </div>
            </div>
        </div>
    </footer>
    <div id="shopModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
    <script>
            window.simplGlobalSetting = {};
            window.simplGlobalSetting.lang = '@CultureInfo.CurrentCulture.Name';
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    @*<script simpl-append-version="true" src="~/lib/jquery/jquery.js"></script>*@
    <script simpl-append-version="true" src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script simpl-append-version="true" src="~/lib/multi-dropdown-menu/js/bootstrap-4-navbar.js"></script>
    <script simpl-append-version="true" src="~/lib/matchheight/jquery.matchHeight.js"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
    
    <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/locales/@(CultureInfo.CurrentCulture.Name).js"></script>
    
    <script simpl-append-version="true" src="~/modules/core/main.js"></script>
    @*<script simpl-append-version="true" src="~/modules/shopping-cart/add-to-cart.js"></script>
    <script simpl-append-version="true" src="~/modules/product-comparison/product-comparison.js"></script> *@
    @RenderSection("scripts", required: false)

    @await Html.PartialAsync("_AnalyticsScript")
</body>
</html>
